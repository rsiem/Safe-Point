@{
    ViewBag.Title = "Contact Us";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@Styles.Render("~/Content/contactus.css")

<div class="container-fluid">
    <div class="row contactform">
        <div class="container-fluid">
            <div class="page-header">
                <h4 class="title">Contact Form</h4>
            </div>
            <form class="contactus" action="contact-us" method="post">
                <div class="column">
                    <p><label>Title</label></p>
                    <p>
                        <select id="title" name="title" requiered>
                            <option value="Mr">Mr.</option>
                            <option value="Ms">Ms.</option>
                            <option value="Mrs">Mrs.</option>
                        </select>
                    </p>

                    <p><label>First Name</label></p>
                    <p><input type="text" id="fname" placeholder="e.g. John" name="fname" required></p>

                    <p><label>Last Name</label></p>
                    <p><input type="text" id="lname" placeholder="e.g. Doe" name="lname" required></p>

                    <p><label>Email</label></p>
                    <p><input type="email" id="email" placeholder="e.g. jdoe@student.unimelb.edu.au" name="email"></p>

                    <p><label>Enquiry Type</label></p>
                    <p>
                        <select id="type" name="type" requiered>
                            <option value="other">Other</option>
                            <option value="subject">Subject</option>
                            <option value="profile">Profile</option>
                            <option value="tutor">Becoming a tutor</option>
                            <option value="general">General</option>
                        </select>
                    </p>

                    <p><label>Enquiry</label></p>
                    <p><textarea id="enquiry" placeholder="" name="enquiry" style="height:150px; max-height:320px;" required></textarea></p>

                    <button type="submit" class="submitbtn submitform" value="submit" id="btn" onclick="sendAlert()">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
